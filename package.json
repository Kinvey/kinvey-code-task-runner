    "Michael Salinger <mjsalinger@kinvey.com>"
  ],
  "dependencies": {
    "async": "1.5.2",
    "body-parser": "1.18.3",
    "express": "4.16.3"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-kinvey-platform": "0.1.6",
    "eslint-plugin-import": "2.16.0",
